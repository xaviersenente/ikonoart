---
import { useTranslations } from '../i18n/utils';
import type { Locale } from '../i18n/ui';

interface Props {
  currentLocale: Locale;
  text: string;
  whiteLine?: boolean;
}

const { currentLocale, text, whiteLine = false } = Astro.props as Props;
// Utilisation du syst√®me de traduction
const t = useTranslations(currentLocale);
const titleText = t(text);
const lineColor = whiteLine ? 'after:bg-white' : 'after:bg-black';
---

<h2 class=`py-24 text-3xl font-medium uppercase relative flex items-center gap-8 after:flex-auto ${lineColor} after:h-[1px] after:block`>{titleText}</h2>