---
export interface Props {
  id: string;
  name: string;
  label: string;
  required?: boolean;
  placeholder?: string;
  rows?: number;
  value?: string;
  classes?: string;
}

const { 
  id, 
  name, 
  label, 
  required = false, 
  placeholder,
  rows = 4,
  value,
  classes = ''
} = Astro.props;
---

<div class="form-field">
  <label for={id} class="block text-sm font-medium text-gray-700 mb-2">
    {label}
    {required && <span class="text-red-600">*</span>}
  </label>
  <textarea 
    id={id}
    name={name}
    required={required}
    placeholder={placeholder}
    rows={rows}
    class={`form-textarea ${classes}`}
  >{value}</textarea>
</div>

