---
export interface Props {
  type?: 'text' | 'email' | 'tel' | 'password' | 'number';
  id: string;
  name: string;
  label: string;
  required?: boolean;
  placeholder?: string;
  value?: string;
  classes?: string;
}

const { 
  type = 'text', 
  id, 
  name, 
  label, 
  required = false, 
  placeholder, 
  value,
  classes = ''
} = Astro.props;
---

<div class="form-field">
  <label for={id} class="block text-sm font-medium text-gray-700 mb-2">
    {label}
    {required && <span class="text-red-600">*</span>}
  </label>
  <input 
    type={type}
    id={id}
    name={name}
    required={required}
    placeholder={placeholder}
    value={value}
    class={`form-input ${classes}`}
  />
</div>

